<!DOCTYPE html>
<html lang="pt">
 <head>
  <meta charset="utf-8">
  <title>AudioAlly</title>
  <%- include('../../partials/header');-%>
  </head>
  <body>


  </body>

  <div class="wrapper">


    <%- include('../../partials/nav');-%>


    <div class="container">
      <div style="margin-bottom: 3%;">
      <h4>Criar Produtor</h4>
      <hr>
      </div>

      <div class="row col-md-6 col-md-offset-2 custyle">
    <form method="POST">
          <div class="form-group">
            <label for="exampleInputEmail1">Nome</label>
            <input type="text" class="form-control" placeholder="Insira o nome" maxlength="24" name="nome" required>
          </div>   
          <div class="form-group">
            <label for="exampleInputEmail1">NIF</label>
            <input type="number" class="form-control" placeholder="000000000" name="nif" required>
          </div>   
          <div class="form-group">
            <label for="exampleInputEmail1">Especialização</label>
            <input type="text" class="form-control" placeholder="Insira a especialização" maxlength="24" name="especializacao" required>
          </div>   
          <div class="form-group">
            <label for="exampleInputEmail1">Ativo</label>
            <input type="number" class="form-control" min="0" max="1" placeholder="Insira o estado" name="ativo" required>
          </div>  
          <button type="submit" class="btn btn-primary">Criar</button>

        </form>
</div>
</div>



<%- include('../../partials/footer');-%>


<script type="text/javascript">
  $(document).ready(function() {
     $(".menu-icon").on("click", function() {
           $("nav ul").toggleClass("showing");
     });
});

// Scrolling Effect

$(window).on("scroll", function() {
     if($(window).scrollTop()) {
           $('nav').addClass('black');
     }

     else {
           $('nav').removeClass('black');
     }
})
</script>
<script src="https://code.jquery.com/jquery-3.6.0.slim.min.js"></script>

</body>

</html>