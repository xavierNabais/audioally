<!DOCTYPE html>
<html lang="pt">
 <head>
  <meta charset="utf-8">
  <title>AudioAlly</title>
  <%- include('../partials/header');-%>
  </head>
  <body>


  </body>
  <link href="https://cdnjs.cloudflare.com/ajax/libs/bootstrap-datepicker/1.3.0/css/datepicker.css" rel="stylesheet" type="text/css" />
  <script src="https://cdnjs.cloudflare.com/ajax/libs/bootstrap-datepicker/1.3.0/js/bootstrap-datepicker.js"></script>

  <div class="wrapper">







    <div class="container" style="background-color: transparent; box-shadow: none;">
      <div style="text-align: center; margin-top:10%; margin-bottom: 5%;">
      </div>
      <div >
      </div>
      <div class="row">
         <div class="col-md-5 mx-auto" style="margin-left: 25%!important;">
            <div id="first">
               <div class="myform form " style="padding:20%;width: 600px;">
                <div style="text-align: center; margin-bottom: 10%;">
                  <h2> Criar conta</h2>
                  </div>
                     <div class="logo mb-3">
                     </div>
                        <form action="" name="registration" method="POST">
                           <!-- nome completo -->
                             <div class="form-group input-group">
                               <input name="nome" class="form-control" placeholder="Nome Completo" type="text" name="nome" maxlength="64" required>
                             </div>

                             <!-- username -->
                              <label class="sr-only" for="inlineFormInputGroup">Username</label>
                              <div class="input-group mb-2">
                                <div class="input-group-prepend">
                                  <div class="input-group-text">@</div>
                                </div>
                                <input type="text" class="form-control" id="inlineFormInputGroup" placeholder="Username" maxlength="32" name="username" required>
                              </div>

                             <!-- email -->
                             <div class="form-group input-group">
                               <input name="email" class="form-control" placeholder="E-mail" type="email" maxlength="100" required>
                             </div>

                             <!-- dta nascimento-->
                           <div class="form-group">
                             <div class="input-group date">
                               <input class="form-control" placeholder="Data de nascimento" type="text" name="data" required>
                               <span class="input-group-append">
                               <button class="btn btn-outline-secondary" type="button">
                                 <i class="fa fa-calendar"></i>
                               </button></span>
                             </div>
                           </div>

                             <!-- sexo -->
                             <div class="form-group input-group">
                               <select class="custom-select" name="sexo">
                                 <option selected disabled="" >Sexo/Género</option>
                                 <option value="Masculino">Masculino</option>
                                 <option value="Feminino">Feminino</option>
                               </select>
                             </div>

                             <!-- password -->
                             <div class="form-group input-group">
                               <input class="form-control" placeholder="Nova password" type="password" maxlength="64" name="password" required>
                             </div>

                             <!-- termos de uso -->
                             <div class="form-check">
                               <input class="form-check-input" type="checkbox" value="" id="defaultCheck1" required>
                               <label class="form-check-label" for="defaultCheck1">Li e aceito os <a href="#">Termos de Uso</a>.</label>
                             </div>

                             <!-- criar conta -->                                      
                             <div class="form-group">
                               <button type="submit" class="btn btn-primary btn-block"> Sign-Up </button>
                             </div>

                             <!-- log in -->      
                             <p class="text-center">Já tens conta no AudioAlly? Faz <a href="/">log in</a>.</p>                                                                 
                        </form>
                  </div>
               </div>
            </div>
         </div>
      </div>








<script type="text/javascript">
  $(document).ready(function() {
     $(".menu-icon").on("click", function() {
           $("nav ul").toggleClass("showing");
     });
});

// Scrolling Effect

$(window).on("scroll", function() {
     if($(window).scrollTop()) {
           $('nav').addClass('black');
     }

     else {
           $('nav').removeClass('black');
     }
})

$(function () {
        $(".date").datepicker({
            autoclose: true,
            todayHighlight: true
        });
    });
</script>
<script src="https://code.jquery.com/jquery-3.6.0.slim.min.js"></script>
      
