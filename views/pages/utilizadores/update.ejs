<!DOCTYPE html>
<html lang="pt">
 <head>
  <meta charset="utf-8">
  <title>AudioAlly</title>
  <%- include('../../partials/header');-%>
  <link href="https://cdnjs.cloudflare.com/ajax/libs/bootstrap-datepicker/1.3.0/css/datepicker.css" rel="stylesheet" type="text/css" />
  <script src="https://cdnjs.cloudflare.com/ajax/libs/bootstrap-datepicker/1.3.0/js/bootstrap-datepicker.js"></script>

  </head>
  <body>


  </body>

  <div class="wrapper">


    <%- include('../../partials/nav');-%>


    <div class="container">
        <div style="margin-bottom: 3%;">
        <h4>Atualizar utilizador</h4>
        <hr>
        </div>
<div class="row col-md-6 col-md-offset-2 custyle" >


<form method="POST"  name="updateUser" id="updateUser">
    <div class="form-group">
        <label for="exampleInputEmail1">ID</label>
        <input type="number" class="form-control" maxlength="24" name="id" required value="<%= dados[0].id %>" readonly>
      </div>    
    <div class="form-group">
      <label for="exampleInputEmail1">Username</label>
      <input type="text" class="form-control"maxlength="24" name="username" required value="<%= dados[0].username %>">
    </div>      
    <div class="form-group">
      <label for="exampleInputPassword1">Nome</label>
      <input type="text" class="form-control" maxlength="24" name="nome" required value="<%= dados[0].nome %>">
    </div>

    <div class="form-group">
        <label for="exampleInputPassword1">Email</label>
        <input type="email" class="form-control" id="exampleInputPassword1" maxlength="36"name="email" required  value="<%= dados[0].email %>">
    </div>

    <div class="form-group">
        <label for="exampleInputPassword1">Password</label>
        <input type="text" class="form-control" maxlength="80" pattern=".{8,}" name="password" required value="<%= dados[0].password %>">
    </div>

    <div class="form-group">
        <label for="exampleInputPassword1">Data de nascimento</label>
        <div class="input-group date">
          <input class="form-control" type="text" name="data" required value="<%= dados[0].data %>">
          <span class="input-group-append">
          <button class="btn btn-outline-secondary" type="button">
            <i class="fa fa-calendar"></i>
          </button></span>
        </div>
      </div>

      <label for="exampleInputPassword1">Sexo</label>
      <div class="form-group">
        <select class="custom-select" name="sexo" id="sexo" required form="updateUser" >
          <option selected readonly  value="<%= dados[0].sexo %>"><%= dados[0].sexo %></option>
          <option value="Masculino">Masculino</option>
          <option value="Feminino">Feminino</option>
        </select>
      </div>

    <div class="form-group">
        <label for="exampleInputPassword1">Admin</label>
        <input type="number" min="0" max="1" class="form-control" placeholder="0-1" name="admin" required value="<%= dados[0].admin %>">
    </div>

    <button type="submit" class="btn btn-primary">Atualizar</button>
  </form>
</div>
</div>

<%- include('../../partials/footer');-%>




<script type="text/javascript">
  $(document).ready(function() {
     $(".menu-icon").on("click", function() {
           $("nav ul").toggleClass("showing");
     });
});

// Scrolling Effect

$(window).on("scroll", function() {
     if($(window).scrollTop()) {
           $('nav').addClass('black');
     }

     else {
           $('nav').removeClass('black');
     }
})

$(function () {
        $(".date").datepicker({
            autoclose: true,
            todayHighlight: true
        });
    });
</script>
<script src="https://code.jquery.com/jquery-3.6.0.slim.min.js"></script>
<script src="https://gitcdn.github.io/bootstrap-toggle/2.2.2/js/bootstrap-toggle.min.js"></script>
<script src="https://cdnjs.cloudflare.com/ajax/libs/jquery.mask/1.14.15/jquery.mask.js"></script>
<script src="https://cdnjs.cloudflare.com/ajax/libs/bootstrap-datepicker/1.3.0/js/bootstrap-datepicker.js"></script>

</body>

</html>